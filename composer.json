{
    "name": "jfmonteiro252/thewisepad-php-api",
    "description": "My implementation of the \"thewisepad\" example from the book \"Arquitetura Limpa na Prática\"",
    "autoload": {
        "psr-4": {
            "Jfmonteiro252\\ThewisepadPhpApi\\": "src/"
        }
    },
    "authors": [
        {
            "name": "João Monteiro"
        }
    ],
    "config": {
        "allow-plugins": {
            "phpro/grumphp": false
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10",
        "enlightn/security-checker": "^1.10",
        "phpunit/phpunit": "^10.1",
        "phpro/grumphp": "^1.15"
    },
    "scripts": {
        "grumphp": [
            "./vendor/bin/grumphp run"
        ]
    }
}
